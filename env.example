# Backend Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=your_mongodb_connection_string

# JWT Configuration
JWT_SECRET=your_jwt_secret_key

# Image URL Configuration
# Set this to your backend domain for production
# For local development, it will use the request host automatically
BACKEND_BASE_URL=http://localhost:5000

# For production, set this to your actual domain
# BACKEND_BASE_URL=https://api.hotmarketdtf.com

# Authorize.net Configuration
# Get these from your Authorize.net merchant account
AUTHORIZE_NET_LOGIN_ID=your_authorize_net_login_id
AUTHORIZE_NET_TRANSACTION_KEY=your_authorize_net_transaction_key

# For testing, use Authorize.net sandbox credentials
# AUTHORIZE_NET_LOGIN_ID=5KP3u95bQpv
# AUTHORIZE_NET_TRANSACTION_KEY=346HZ32z3fP4hTG2

# For production, use your live Authorize.net credentials
# AUTHORIZE_NET_LOGIN_ID=your_live_login_id
# AUTHORIZE_NET_TRANSACTION_KEY=your_live_transaction_key
